@model IEnumerable<Pasternak.MoviesCatalog.Interfaces.IMovie>

@{
    ViewData["Title"] = "Index";
}

<h1>Movies</h1>

<p>
    <a asp-action="Create" class="btn btn-info">Create New</a>
</p>

<form method="get" action="@Url.Action("Index")">
    <div class="form-group row">
        <label class="col-sm-2 col-form-label">Filter by:</label>
        <div class="col-sm-10">
            <label class="form-check-label">
                <input type="radio" name="filterType" value="Title" checked /> Title
            </label>
            <label class="form-check-label">
                <input type="radio" name="filterType" value="ReleaseYear" /> Release Year
            </label>
            <label class="form-check-label">
                <input type="radio" name="filterType" value="MovieGenre" /> Genre
            </label>
        </div>
    </div>

    <div class="form-group row">
        <label for="movieFilter" class="col-sm-2 col-form-label">Filter:</label>
        <div class="col-sm-8">
            <input type="text" id="movieFilter" name="movieFilter" value="@ViewBag.movieFilter"
                   class="form-control" style="width: 100%; margin-bottom: 10px" />
        </div>
        <div class="col-sm-2">
            <button type="submit" class="btn btn-info">Filter</button>
            <a asp-action="Index" class="btn btn-secondary">Clear</a>
        </div>
    </div>
</form>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                Release Year
            </th>
            <th>
                Movie Genre
            </th>
            <th>
                Director
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReleaseYear)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MovieGenre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Director.Name)
            </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.ID" class="btn btn-outline-info">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.ID" class="btn btn-outline-warning">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.ID" class="btn btn-outline-danger">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
