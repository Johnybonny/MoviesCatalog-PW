<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Pasternak.MoviesCatalog.MAUI.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Pasternak.MoviesCatalog.MAUI"
    Shell.FlyoutBehavior="Disabled"
    Title="Pasternak.MoviesCatalog.MAUI">

    <FlyoutItem>
        <ShellContent
            Title="Home"
            ContentTemplate="{DataTemplate local:MainPage}"
            Route="MainPage" />

        <ShellContent
            Title="Directors"
            ContentTemplate="{DataTemplate local:DirectorsPage}"
            Route="DirectorsPage" />

        <ShellContent
            Title="Movies"
            ContentTemplate="{DataTemplate local:MoviesPage}"
            Route="MoviesPage" />

    </FlyoutItem>


</Shell>
